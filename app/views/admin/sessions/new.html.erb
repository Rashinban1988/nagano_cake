<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row offset-1 my-4">
        <h5 class="bg-light px-3">管理者ログイン</h5>
      </div>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="row d-flex justify-content-center">
        <div class="field">
          <table>
            <tr>
              <td><%= f.label "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com", class: "ml-5 col-12" %></td>
            </tr>
            <tr>
              <td><%= f.label "パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password", class: "ml-5 col-12" %></td>
            </tr>
          </table>
        </div>
      </div>

      <div class="row d-flex justify-content-center">
        <div class="actions my-3">
          <%= f.submit "ログイン", class: 'btn btn-primary ml-4' %>
        </div>
      </div>
      <% end %>

<%= render "admin/shared/links" %>