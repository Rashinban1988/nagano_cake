<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>ジャンル一覧・追加</h1>
      <br>
      <div class="form-horizontal" role="form">
        <%= form_with model:  @genre, url: admin_genres_path do |f| %>
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.label :name, "ジャンル名を入力"%>
              <%= f.text_field :name, autofocus: true %>
              <%= f.submit "追加", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
      <br>
      <br>
      <div class="row">
        <div class="col-xs-12">
          <table class="table">
            <tr>
              <td><strong>ジャンル名一覧</strong></td>
              <th></th>
            </tr>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "名前変更", edit_admin_genre_path(genre.id), class: "btn btn-primary"  %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>