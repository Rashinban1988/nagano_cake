<div class="container">
  <div class="row">
    <h4>商品編集</h4>
  </div>

  <div class="row">
    <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="col-xs-8">
        <p>商品名 <%= f.text_field :name %> </p>
        <p>商品説明 <%= f.text_area :introduction %> </p>
        <p>ジャンル <%= f.collection_select :genre_id, Genre.all, :id, :name %> </p>
        <p>税抜価格 <%= f.number_field :price %>円 </p>
        <p>販売ステータス <%= f.select :validate, {
          "販売中": true,
          "売り切れ": false
        } %> </p>
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>