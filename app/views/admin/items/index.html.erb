<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h1>商品一覧</h1>
			<%= link_to "新規登録はこちら", new_admin_item_path %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-10">
			<table class="table table-hover table-resposive">
				<thead>
					<tr class="active">
						<th>商品画像</th>
						<th>商品ID</th>
						<th>商品名</th>
						<th>商品説明文</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>販売ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
						<tr>
							<td>
								<% if item.item_image.attached? %>
							    <%= image_tag item.item_image, size: "50x50" %>
							  <% else %>
							    <%= image_tag 'no_image', size: "50x50" %>
							  <% end %>
							</td>
							<td>
								<%= item.id %>
							</td>
							<td>
								<%= link_to item.name, admin_item_path(item.id) %>
							</td>
							<td>
								<%=  item.introduction %>
							</td>
							<td>
								<%=  item.price %>
							</td>
							<td>
								<%= item.genre.name %>
							</td>
							<td>
								<% if item.validate == true %>
									<%= "販売中" %>
								<% else %>
									<%= "売り切れ" %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>