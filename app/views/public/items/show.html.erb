<div class="container">
	<div class="row">
			<h1>商品詳細</h1>
	</div>

	<div class="row">
		<div class="col-xs-8">
			<div class="table-responsive">
				<table class="table text-nowrap">
					<tbody>
						<tr>
							<td>商品画像</td>
							<td>
								<% if @item.item_image.attached? %>
							    <%= image_tag @item.item_image, size: "100x100" %>
							  <% else %>
							    <%= image_tag 'no_image', size: "100x100" %>
							  <% end %>
							</td>
						</tr>
						<tr>
							<td>商品名</td>
							<td>
								<%= @item.name %>
							</td>
						</tr>
						<tr>
							<td>商品説明</td>
							<td>
								<%= @item.introduction %>
							</td>
						</tr>
						<tr>
							<td>ジャンル</td>
							<td>
								<%= @item.genre.name %>
							</td>
						</tr>
						<tr>
							<td>税抜価格</td>
							<td>
								<%= @item.price %>円
							</td>
						</tr>
						<tr>
							<td>販売ステータス</td>
							<td>
								<% if @item.validate == true %>
									<%# tdで囲まれているため<%=>の削除 %>
									販売中
								<% else %>
									売り切れ
								<% end %>
							</td>
						</tr>
					</tbody>
				</table>
				<div class="row">
          <div class="offset-2">

            <div class="row">
              <%= form_with model: @cart_item do |f| %>
                <%= f.select :amount, *[1..10], min:1, placeholder: "個数選択" %><span>個</span>
                <%= f.hidden_field :item_id, :value => @item.id %></br>
                <%= f.submit "カートに入れる", class: "btn btn-sm btn-outline-primary" %>
          　　<% end %>
            </div>

            <div class="row">
              <%= flash[:into_cart_error] %>
            </div>

          </div>
        </div>
			</div>
		</div>
	</div>
</div>