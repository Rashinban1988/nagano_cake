<div class="container">
	<div class="row mt-5">

		<div class="col-2">
		</div>

    <div class="col-4">
        <%= image_tag @item.item_image, class: "img-show" %>
    </div>
    <div class="col-6">
        <h2 class="fw-bold mb-3"><%= @item.name %></h2>
        <p class="h4 mb-5"><%= @item.introduction %></p><br>
        <p class="h4 mt-2"><span class="h4">¥<%= @item.price.to_s(:delimited) %></span><span class="h6">(税込)</span></p>
    <% if @item.validate == true %>
    	<%= form_with model: @cart_item do |f| %>
      <div class="row mt-4">
        <div class="col-3">
          <div class="form-group">
            <div>
              <%= f.select :amount, *[1..10], { include_blank: '個数選択' }, autofocus: true, autocomplete: "amount", style: "width:100%", class: "btn btn-primary dropdown-toggle py-1" %>
              <%= f.hidden_field :item_id, :value => @item.id %>
            </div>
          </div>
        </div>
        <div class="col-3">
          <div class="form-group">
            <%= f.submit "カートに入れる", class: 'btn btn-sm btn-success' %>
          </div>
      　</div>
      </div>
      <div class="row field_with_errors">
        <%= flash[:into_cart_error] %>
      </div>
      <% end %>
    <% else %>
      <%= "販売停止中" %>
    <% end %>
    </div>

  </div>
</div>
