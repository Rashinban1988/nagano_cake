<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row offset-1 my-3">
        <h5 class="bg-light px-3">ログイン</h5>
      </div>

      <div class="row offset-1 pl-3 my-3">
        <h6 class="bg-light px-3">会員の方はこちらからログイン</h6>
      </div>

      <%= form_with model: @customer, url: customer_session_path, method: :post do |f| %>
        <div class="row offset-2">
          <div class="field">
            <table>
              <tr class="offset-1">
                <td class="col-4"><%= f.label "メールアドレス" %></td>
                <td class="col-4 px-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exsample.com" %></td>
              </tr>
              <tr class="offset-1">
                <td class="col-4"><%= f.label "パスワード" %></td>
                <td class="col-4 px-5"><%= f.password_field :password, autocomplete: "current-password" %></td>
              </tr>
            </table>
          </div>
        </div>
  
        <div class="row offset-4">
          <div class="actions my-3 ml-4">
            <%= f.submit "ログイン", class: 'btn btn-sm btn-primary px-4 ml-2' %>
          </div>
        </div>
      <% end %>

<%= render "public/shared/links" %>