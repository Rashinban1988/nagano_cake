<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row offset-1 my-3">
        <h3 class="bg-light px-3">注文履歴一覧</h3>
      </div>
      <div class="row d-flex justify-content-center my-3">
        <table class="table table-bordered border-dark">
          <thead class="table-bordered bg-light">
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.shipping_postal_code %><br>
                <%= order.shipping_address %><br>
                <%= order.shipping_name %>
              </td>
              <td>
                <% order.order_items.each do |order_items| %>
                  <%= order_items.items.name %><br>
                <% end %>
              </td>
              <td><%= order.claimed.to_s %>円</td>
              <td><%= order.order_status_i18n %></td>
              <td><%= link_to "表示する", order_path(order.id), class: 'btn btn-primary' %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>