<div class="container">
  <div class="row col-12">
    <div class="row offset-1 my-3">
      <h3 class="bg-light px-3">注文履歴詳細</h3>
    </div>
    <div class="row col-12 my-3">
      <div class="col-8">
        <label class="font-weight-bold">注文情報</label>
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <th class="table-bordered bg-light col-3">注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th class="table-bordered bg-light col-3">配送先</th>
              <td>
                〒<%= @order.shipping_postal_code %><br>
                <%= @order.shipping_address %><br>
                <%= @order.shipping_name %>
              </td>
            </tr>
            <tr>
              <th class="table-bordered bg-light col-3">支払方法</th>
              <td><%= @order.amount_billed_i18n %></td>
            </tr>
            <tr>
              <th class="table-bordered bg-light col-3">ステータス</th>
              <td><%= @order.order_status_i18n %></td>
            </tr>
          </tbody>
        </table>
        </div>
      <div class="col-4">
        <label class="font-weight-bold">請求情報</label>
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <th class="table-bordered bg-light col-2.5">商品合計</th>
              <td class="col-1.5"><%= @total %></td>
            </tr>
            <tr>
              <th class="table-bordered bg-light col-2.5">配送料</th>
              <td class="col-1.5"><%= @order.postage %></td>
            </tr>
            <tr>
              <th class="table-bordered bg-light col-2.5">ご請求額</th>
              <td class="col-1.5"><%= @order.claimed %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <div class="col-12">
      <div class="row col-11 my-3">
        <label class="font-weight-bold">注文内容</label>
        <table class="table table-bordered border-dark">
          <% @order_items.each do |order_item| %>
          <thead class="table-bordered bg-light">
            <tr>
              <th class="col-7">商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="col-7"><%= order_item.items.name %></td>
              <td><%= order_item.price_at_purchase %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.subtotal %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
