<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <h1>注文情報入力</h1>

      <div class="row">
        <strong class="red-border px-3">支払方法</strong>
      </div>

      <%= form_with model: @order, url: order_confirmation_order_path, method: :post do |f| %>
        <div class="form-check mt-3">
            <div>
              <%= f.radio_button :amount_billed, Order.amount_billeds.key(0) %>
              <%= f.label :amount_billed, Order.amount_billeds_i18n[:credit_card] %>
            </div>
            <div>
              <%= f.radio_button :amount_billed, Order.amount_billeds.key(1) %>
              <%= f.label :amount_billed, Order.amount_billeds_i18n[:transfer] %>
            </div>
        </div>

        <div class="row">
          <strong class="red-border px-3">お届け先</strong>
        </div>
        <div class="form-check mt-3">
          <div>
            <%= radio_button_tag("select_address", "0", checked: true) %>
            <%= f.label :select_addreses, " ご自身の住所" %>
            <div><%= current_customer.my_address %></div>
          </div>
          <div>
            <%= radio_button_tag("select_address", "1") %>
            <%= f.label :select_addreses, " 登録済み住所から選択" %>
            <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :full_address) %>
          </div>
          <div>
            <%= radio_button_tag("select_address", "2") %>
            <%= f.label :select_address, "新しいお届け先" %>
            <div class ="row">
              <div class="col-xs-12">
                <table class="table">
                  <tr>
                    <td><%= "　" %><%= f.label :shipping_postal_code, "郵便番号(ハイフンなし)" %></td>
                    <td><%= " " %><%= f.text_field :shipping_postal_code %></td>
                  </tr>
                  <tr>
                    <td><%= "　" %><%= f.label :shipping_address, "住所" %></td>
                    <td><%= " " %><%= f.text_field :shipping_address %></td>
                  </tr>
                  <tr>
                    <td><%= "　" %><%= f.label :shipping_name, "宛名" %></td>
                    <td><%= " " %><%= f.text_field :shipping_name %></td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
          <%= f.submit "確認画面へ進む", class: "btn btn-outline-danger ml-auto" %>
        </div>
      <% end %>
    </div>
  </div>
</div>