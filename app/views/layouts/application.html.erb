<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="alert alert-info" role="alert">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark mt-3 mb-3">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav4" aria-controls="navbarNav4" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to root_path, class: "navbar-brand" do %>
        <h1 class="title is-4" style="font-family: cursive;">nagano_cake</h1>
      <% end %>
      <% if admin_signed_in? %>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_orders_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% elsif customer_signed_in? %>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "マイページ", customer_path(current_customer), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "アイテム一覧", admin_genres_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% elsif current_page?(root_path) %>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to '新規登録', new_customer_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', new_customer_session_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% elsif current_page?(admin_path) %>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to '管理者ログイン', new_admin_session_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% else %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
